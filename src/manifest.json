{
  "manifest_version": 2,
  "name": "VK extension",
  "version": "",
  "description": "",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },
  "author": "al4str",
  "permissions": [
    "https://*.vk.com/audios*",
    "background",
    "cookies",
    "tabs",
    "activeTab",
    "storage"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "browser_action": {
    "default_title": "VK extension",
    "default_popup": "pages/popup.html"
  },
  "background": {
    "persistent": true,
    "page": "pages/background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
